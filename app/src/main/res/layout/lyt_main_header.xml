<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBGHomePageItem">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dmnAppBarHeight"
        android:paddingHorizontal="15dp"
        app:layout_scrollFlags="scroll|enterAlways|snap">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:src="@drawable/dr_logo_full"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/learnBtn"
            style="@style/TextAppearanceCommonTitle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/dr_bg_primary_cornered_selector"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:text="Learn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/indexMenu"
            app:layout_constraintTop_toTopOf="parent" />-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/indexMenu"
            android:layout_width="@dimen/dmnActionButton"
            android:layout_height="@dimen/dmnActionButton"
            android:background="@drawable/dr_bg_hover_round"
            android:contentDescription="@string/strTitleMenu"
            android:padding="7dp"
            android:src="@drawable/dr_icon_hamburger"
            android:tooltipText="@string/strTitleMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.appbar.AppBarLayout>
