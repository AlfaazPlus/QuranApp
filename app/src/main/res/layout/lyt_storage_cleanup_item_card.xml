<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/dr_bg_chapter_card_bordered"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearanceCommonTitleLarge"
        android:textColor="@color/colorText2"
        android:textSize="22sp"
        tools:text="Translations" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:textColor="@color/colorText2"
        tools:text="5 downloaded translations can be freed up." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/buttonAction"
        style="@style/ButtonActionAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelFreeUpSpace" />
</LinearLayout>