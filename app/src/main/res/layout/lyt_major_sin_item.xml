<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dr_bg_search_result_item"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:lineSpacingMultiplier="1.25"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dmnCommonSizeTitle"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.4"
            android:background="@drawable/dr_bg_primary_round" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verseRef"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/dmnCommonSize2"
            tools:text="Al Fatihah 3:16" />

    </LinearLayout>

</LinearLayout>
