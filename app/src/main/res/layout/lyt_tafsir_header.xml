<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tafsirTitle"
        style="@style/TextAppearanceCommonTitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        tools:text="Tafsir Ibn Kathir" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnPrevVerse"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_action_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/prevVerseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-medium"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="@dimen/dmnCommonSize2_5" />


            <com.quranapp.android.widgets.IconedTextView
                android:id="@+id/textPrevTafsir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/labelPreviousTafsir"
                android:textColor="@color/colorIcon"
                android:textSize="@dimen/dmnCommonSize3_5"
                app:drawableStartDimen="16dp"
                app:drawableTint="@color/colorIcon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNextVerse"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_action_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nextVerseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-medium"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="@dimen/dmnCommonSize2_5" />


            <com.quranapp.android.widgets.IconedTextView
                android:id="@+id/textNextTafsir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/labelNextTafsir"
                android:textColor="@color/colorIcon"
                android:textSize="@dimen/dmnCommonSize3_5"
                app:drawableStartDimen="16dp"
                app:drawableTint="@color/colorIcon" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>