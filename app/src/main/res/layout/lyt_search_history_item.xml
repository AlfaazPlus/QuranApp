<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dr_bg_hover"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp">

    <com.quranapp.android.widgets.IconedTextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingVertical="10dp"
        app:drawableStartCompat="@drawable/dr_icon_history" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/push"
        android:layout_width="@dimen/dmnActionButton"
        android:layout_height="@dimen/dmnActionButton"
        android:layout_marginStart="10dp"
        android:background="@drawable/dr_bg_hover_round"
        android:padding="7dp"
        android:src="@drawable/dr_icon_arrow_north_west" />
</LinearLayout>