        <shape>
            <solid android:color="@color/colorBGHomePageItem" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
    <shape>
        <solid android:color="#1F838383" />
